		<folder>tmpl</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="show_digicom_menu"
                        type="list"
                        default="0"
                        label="MOD_DIGICOM_MENU_FIELD_SHOW_DIGICOM_MENU_LABEL"
                        description="MOD_DIGICOM_MENU_FIELD_SHOW_DIGICOM_MENU_DESC">
